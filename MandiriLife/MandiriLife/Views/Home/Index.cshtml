    <script>
        function SaveData() {
            var Profile = {};
            Profile.Nama = $("#Nama").val();
            Profile.Alamat = $("#Alamat").val();
            Profile.TanggalLahir = $("#TanggalLahir").val();
            Profile.JenisKelamin = $("#JenisKelamin").val();
            Profile.Foto = Gambar;
            $.ajax({
                type: "POST",
                url: "@(Url.Action("addProfile","Home"))",
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                data: JSON.stringify({
                    profile: Profile
                }),
                success: function (val) {
                    initializeData();
                    $('#ModalPhoto').modal('hide');
                },
                error: function () {

                }
            })
        }

        function initializeData() {
            $.blockUI()
            $('#example2').dataTable().fnClearTable();
            $('#example2').dataTable().fnDestroy();
            $("#example2").DataTable(
                {
                    "ajax": {
                        "url": "@(Url.Action("GetAllUserProfile","Home"))",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        {
                            "data": "ProfileID", render: function (data, type, row) {
                                return '<a href="#" onclick=showPhoto("' + row.Foto + '")>' + row.Nama + '</a>';
                            }
                        },
                        { "data": "Nama" },
                        { "data": "Alamat" },
                        { "data": "TanggalLahir" },
                        { "data": "JenisKelamin" }
                    ]

                });
            $.unblockUI();
        }
        $("#formInput").submit(function (event) {

            event.preventDefault();
        });
        $('#modalForm').on('hidden.bs.modal', function (e) {
            
        })

        function getImageBase64() {

            var base64Image = Gambar;
                var sub = base64Image.split(',')[1];
                Gambar = sub;

                if (!base64Image.startsWith("data:image")) {
                    alert('Attachment harus diisi !');
                }


        }
        var cek = ''
        function showImage() {
            if (this.files && this.files[0]) {
                var tpData = this.files[0].type
                cek = tpData;

                //image/jpeg
                //alert(filePDF);
                if (this.files[0].type != 'image/jpeg') {
                    alert('Masukan gambar dengan format JPG/JPEG');
                    this.files[0] = "";

                }
                else {

                    if (this.files[0].size > 2200000) {
                        alert('Mencapai file maksimum !');
                        return;
                    }
                    console.log(cek);
                    var obj = new FileReader();
                    obj.onload = function (data) {
                        Gambar = data.target.result;
                    }


                }
                obj.readAsDataURL(this.files[0]);

            }
        }

        function showPhoto(src) {
            $('#ModalPhoto').modal('toggle');
            $('#ModalPhoto').modal('show');
            $('#TampilGambar').attr("src", "data:image/png;base64, "+src);
        }
    </script>
